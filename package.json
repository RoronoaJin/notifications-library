{
    "version": "0.1.2",
    "license": "MIT",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts",
    "files": [
        "dist",
        "src"
    ],
    "engines": {
        "node": ">=10"
    },
    "scripts": {
        "start": "tsdx watch",
        "build": "tsdx build",
        "test": "tsdx test",
        "lint": "tsdx lint",
        "prepare": "tsdx build",
        "size": "size-limit",
        "analyze": "size-limit --why",
        "test:ci": "npm run test -- --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "tsdx lint"
        }
    },
    "prettier": {
        "printWidth": 80,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
    },
    "name": "notifications-library",
    "author": "Gabriele Affronto",
    "jest": {
        "verbose": true,
        "automock": false,
        "setupFiles": [
            "./setupTests.ts"
        ]
    },
    "module": "dist/notifications-library.esm.js",
    "size-limit": [
        {
            "path": "dist/notifications-library.cjs.production.min.js",
            "limit": "10 KB"
        },
        {
            "path": "dist/notifications-library.esm.js",
            "limit": "10 KB"
        }
    ],
    "devDependencies": {
        "@size-limit/preset-small-lib": "^8.1.1",
        "@types/uuid": "^9.0.0",
        "husky": "^8.0.3",
        "jest-fetch-mock": "^3.0.3",
        "size-limit": "^8.1.1",
        "tsdx": "^0.13.3",
        "tslib": "^2.4.1",
        "typescript": "^3.9.10"
    },
    "dependencies": {
        "uuid": "^9.0.0"
    }
}
